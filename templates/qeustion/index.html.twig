{% extends 'base.html.twig' %}

{% block title %}Qeustion index{% endblock %}

{% block body %}
    <h1>Qeustion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question_text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for qeustion in qeustions %}
            <tr>
                <td>{{ qeustion.id }}</td>
                <td>{{ qeustion.questionText }}</td>
                <td>
                    <a href="{{ path('qeustion_show', {'id': qeustion.id}) }}">show</a>
                    <a href="{{ path('qeustion_edit', {'id': qeustion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('qeustion_new') }}">Create new</a>
{% endblock %}
